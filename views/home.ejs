<link rel="stylesheet" href="/css/home.css">

<div class="home-container">
    <div class="form-box flex">
        <h1>CSV Upload</h1>
        <form action="/file/uploads" method="post" enctype="multipart/form-data">
            <label for="file-upload" class="form-btn">Upload CSV</label>
            <input type="file" id="file-upload" name="csv" required>
            <button type="submit" class="form-btn" >Upload</button>
        </form>
    </div>

    <div class="uploaded-file-list flex">
        <% for(let i = 0; i < files.length; i++){ %>
            <div class="uploaded-files flex">
                <ul class="flex">
                    <a href="/views/<%= files[i]._id %>"><%= files[i].name %></a>
                    <a href="/delete/<%= files[i]._id %>"><i class="fa-solid fa-trash"></i></a>
                </ul>
            </div>
        <% } %>
    </div>
</div>