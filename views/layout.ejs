<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Icons -->
    <script src="https://kit.fontawesome.com/df98e19b56.js" crossorigin="anonymous"></script>

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,900;1,200;1,400&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <title>CSV Upload</title>
    <link rel="stylesheet" href="/css/layout.css">
    <%- style %>
</head>
<body>
    <%- include('_header'); %>

    <div class="main">
        <%- body %>
    </div>

    <%- include('_footer'); %>
    <%- script %>
    <script>
        <% if(flash.success && flash.success.length > 0){ %>
            new Noty({
                theme: 'metroui',
                text: '<%= flash.success %>',
                type: 'success',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% } %>

        <% if(flash.error && flash.error.length > 0){ %>
            new Noty({
                theme: 'metroui',
                text: '<%= flash.error %>',
                type: 'error',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% } %>
    </script>
</body>
</html>